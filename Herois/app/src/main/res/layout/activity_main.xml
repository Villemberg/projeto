<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/memes"
    tools:context="org.jean.villemberg.personagens.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:background="@color/Amarelo"
            >

            <!-- Urro -->
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/fazourro"
                android:id="@+id/btnUrro"
                />
            <!-- G A L V A O  -->
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/galvaobueno"
                android:id="@+id/btnGalvao"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                />

            <!-- H O R A -->
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/horadoshow"
                android:id="@+id/btnHora"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:background="@color/Amarelo"
            >
            <!-- D A R T H -->
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/btnUrro"
                android:background="@drawable/darth"
                android:id="@+id/btnDarth"
                />

            <!-- A L A H U -->
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/alahu"
                android:id="@+id/btnAlahu"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <!-- N I G G A -->
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/nigga"
                android:id="@+id/btnNigga"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:background="@color/Amarelo"
            >
            <!-- T U R N  -->
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/turndown"
                android:id="@+id/btnTurn"/>

            <!-- W I N -->
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/winxp"
                android:id="@+id/btnWin"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <!-- R I S A D A-->
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/soa"
                android:id="@+id/btnRisada"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:background="@color/Amarelo"
            >
            <!-- ERROU-->
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/faustao"
                android:id="@+id/btnErrou"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/wombocombo"
                android:id="@+id/btnWombo"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/applause"
                android:id="@+id/btnApplause"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/colorGrey"
            android:layout_marginTop="6dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            >
            <EditText
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:id="@+id/textZuera"
                android:hint="Nome de Usuario"
                android:textStyle="bold"
                android:textColor="@color/Vermelho"
                android:background="@color/colorWhite"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textAlignment="center"

                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Cadastre"
                android:id="@+id/btnCadastre"
                android:background="@color/Amarelo"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:layout_marginRight="6dp"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
